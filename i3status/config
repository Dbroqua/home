# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = i3bar
        colors = true
        interval = 5
	separator = "~"
}

order += "disk /"
order += "disk /home"
order += "run_watch DHCP"
order += "path_exists VPN"
order += "wireless wlp2s0"
order += "ethernet eth0"
order += "battery 0"
#order += "cpu_temperature 0"
#order += "cpu_temperature 1"
#order += "load"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

wireless wlp2s0 {
        format_up = "W: %ip (%quality at %essid, %bitrate)"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

disk "/" {
        format = "Root: %percentage_free"
}

disk "/home" {
	format = "Home: %percentage_free"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "ðŸŽ»: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
	format = "CPU: %usage"
}

cpu_temperature 0 {
	format = "Core 0: %degrees Â°C"
	path = "/sys/bus/acpi/devices/LNXTHERM:00/thermal_zone/temp"
}
cpu_temperature 1 {
	format = "Core 1: %degrees Â°C"
	path = "/sys/bus/acpi/devices/LNXTHERM:01/thermal_zone/temp"

}

battery 0 {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR:"
        status_bat = "ðŸ”‹ BAT:"
        status_unk = "? UNK:"
        status_full = "â˜» FULL:"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


